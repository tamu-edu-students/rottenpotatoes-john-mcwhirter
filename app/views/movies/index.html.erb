<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<table id="movies_table" style="border: 2px solid black; border-collapse: collapse">
    <thead>
      <tr style="border-bottom: 2px solid black">
        <% if @sort_column == 'title' && @sort_direction == 'asc' %>
        <th style="background-color: rgba(255, 0, 0, 0.5)">
        <% elsif @sort_column == 'title' && @sort_direction == 'desc' %>
        <th style="background-color: rgba(0, 255, 0, 0.5)">
        <% else %>
        <th>
        <% end %>
          <%= link_to "Title", movies_path(sort: 'title', direction: (@sort_column == 'title' && @sort_direction == 'asc') ? 'desc' : 'asc') %>
          <%= '↑' if @sort_column == 'title' && @sort_direction == 'asc' %>
          <%= '↓' if @sort_column == 'title' && @sort_direction == 'desc' %>
        </th>
        <% if @sort_column == 'rating' && @sort_direction == 'asc' %>
        <th style="background-color: rgba(255, 0, 0, 0.5)">
        <% elsif @sort_column == 'rating' && @sort_direction == 'desc' %>
        <th style="background-color: rgba(0, 255, 0, 0.5)">
        <% else %>
        <th>
        <% end %>
          <%= link_to "Rating", movies_path(sort: 'rating', direction: (@sort_column == 'rating' && @sort_direction == 'asc') ? 'desc' : 'asc') %>
          <%= '↑' if @sort_column == 'rating' && @sort_direction == 'asc' %>
          <%= '↓' if @sort_column == 'rating' && @sort_direction == 'desc' %>
        </th>
        <% if @sort_column == 'release_date' && @sort_direction == 'asc' %>
        <th style="background-color: rgba(255, 0, 0, 0.5)">
        <% elsif @sort_column == 'release_date' && @sort_direction == 'desc' %>
        <th style="background-color: rgba(0, 255, 0, 0.5)">
        <% else %>
        <th>
        <% end %>
          <%= link_to "Release Date", movies_path(sort: 'release_date', direction: (@sort_column == 'release_date' && @sort_direction == 'asc') ? 'desc' : 'asc') %>
          <%= '↑' if @sort_column == 'release_date' && @sort_direction == 'asc' %>
          <%= '↓' if @sort_column == 'release_date' && @sort_direction == 'desc' %>
        </th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <% if @sort_column == 'title' && @sort_direction == 'asc' %>
          <td style="background-color: rgba(255, 0, 0, 0.5)">
          <% elsif @sort_column == 'title' && @sort_direction == 'desc' %>
          <td style="background-color: rgba(0, 255, 0, 0.5)">
          <% else %>
          <td>
          <% end %>
            <%= movie.title %>
          </td>
          <% if @sort_column == 'rating' && @sort_direction == 'asc' %>
          <td style="background-color: rgba(255, 0, 0, 0.5)">
          <% elsif @sort_column == 'rating' && @sort_direction == 'desc' %>
          <td style="background-color: rgba(0, 255, 0, 0.5)">
          <% else %>
          <td>
          <% end %>
            <%= movie.rating %>
          </td>
          <% if @sort_column == 'release_date' && @sort_direction == 'asc' %>
          <td style="background-color: rgba(255, 0, 0, 0.5)">
          <% elsif @sort_column == 'release_date' && @sort_direction == 'desc' %>
          <td style="background-color: rgba(0, 255, 0, 0.5)">
          <% else %>
          <td>
          <% end %>
            <%= movie.release_date %>
          </td>
          <td><%= link_to "Show", movie_path(movie, sort: @sort_column, direction: @sort_direction) %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr style="border-top: 2px solid black; font-weight: bold">
        <td colspan="4" style="text-align: right">Total: <%= @movies.count %></td>
      </tr>
    </tfoot>
</table>
<div>
<%= link_to "New movie", new_movie_path(sort: @sort_column, direction: @sort_direction) %>
</div>
